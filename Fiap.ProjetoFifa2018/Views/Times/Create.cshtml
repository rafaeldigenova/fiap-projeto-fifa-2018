@model Fiap.ProjetoFifa2018.Dominio.Entidades.Times.Time

@{
    ViewData["Title"] = "Cadastro de Times";
}

<h2>Cadastro de Times</h2>

<h4>Informe os dados do time para cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDoTime" class="control-label"></label>
                <input asp-for="NomeDoTime" class="form-control" />
                <span asp-validation-for="NomeDoTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Escudo" class="control-label"></label>
                <input asp-for="Escudo" class="form-control" />
                <span asp-validation-for="Escudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar Time" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

